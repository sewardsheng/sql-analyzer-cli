{
  "name": "sql-analyzer-api",
  "version": "1.0.0",
  "description": "SQL语句智能分析与扫描API服务",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/api/server.js",
    "dev:bun": "bun run src/api/server.js",
    "build": "tsc",
    "build:bun": "bun build ./src/api/server.js --outdir ./dist --target node",
    "build:watch": "tsc --watch",
    "start": "node dist/api/server.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "sql",
    "analyzer",
    "api",
    "security",
    "performance",
    "hono",
    "docker"
  ],
  "author": "盛威",
  "license": "MIT",
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "@langchain/classic": "^1.0.2",
    "@langchain/community": "^1.0.2",
    "@langchain/core": "^1.0.3",
    "@langchain/openai": "^1.1.0",
    "@langchain/textsplitters": "^1.0.0",
    "best-effort-json-parser": "^1.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "hono": "^4.10.6",
    "langchain": "^1.0.4",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "bun-types": "latest",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sql-analyzer-api.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/sql-analyzer-api/issues"
  },
  "homepage": "https://github.com/your-username/sql-analyzer-api#readme"
}

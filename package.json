{
  "name": "sql-analyzer-cli",
  "version": "1.0.0",
  "description": "SQL语句智能分析与扫描CLI工具",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sql-analyzer": "./bin/cli.js"
  },
  "scripts": {
    "start": "bun run bin/cli.js",
    "dev": "bun run bin/cli.js",
    "prod": "bun run dist/bin/cli.js",
    "build": "bun build ./src/index.js --outdir ./dist --target node --external ./src/cli/commands/api.js --external ./src/services/api && bun build ./bin/cli.js --outdir ./dist/bin --target node --external ./src/cli/commands/api.js --external ./src/services/api",
    "build:api": "bun build ./src/services/api/apiServer.js --outdir ./dist --target bun --entry-naming '[name].js'",
    "api": "bun run src/services/api/apiServer.js"
  },
  "keywords": [
    "sql",
    "analyzer",
    "cli",
    "security",
    "performance"
  ],
  "author": "盛威",
  "license": "MIT",
  "dependencies": {
    "@langchain/classic": "^1.0.2",
    "@langchain/community": "^1.0.2",
    "@langchain/core": "^1.0.3",
    "@langchain/langgraph": "^1.0.1",
    "@langchain/openai": "^1.1.0",
    "@langchain/textsplitters": "^1.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "hono": "^4.0.0",
    "inquirer": "^9.2.11",
    "langchain": "^1.0.4",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "bun-types": "latest",
    "jest": "^29.7.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
